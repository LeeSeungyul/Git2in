# Application
APP_NAME="Git2in"
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./git2in.db
# For PostgreSQL: postgresql://user:password@localhost/git2in

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Git
REPOS_PATH=/var/git2in/repos
GIT_BINARY_PATH=git

# Server
HOST=0.0.0.0
PORT=8000

# Git Protocol Server
GIT_HTTP_PORT=8080

# Performance
GIT_OPERATION_TIMEOUT=300
MAX_REPO_SIZE_MB=1024